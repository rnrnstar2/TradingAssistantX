{
  "hooks": [
    {
      "event": "PreToolUse",
      "matcher": "Bash|Read|Write|Edit|MultiEdit",
      "command": "bash /Users/rnrnstar/github/ArbitrageAssistant/.claude/hooks/init-check.sh"
    },
    {
      "event": "PreToolUse",
      "matcher": "Bash",
      "command": "bash -c 'INPUT=\"$1\"; if [ \"$ROLE\" = \"worker\" ] && [[ \"$INPUT\" =~ git\\s+(commit|push|merge|rebase|checkout|branch) ]]; then echo \"❌ Worker権限でgit操作は禁止です。Managerに依頼してください。\"; exit 1; fi' _ \"$INPUT\""
    },
    {
      "event": "PostToolUse",
      "matcher": "Write|Edit|MultiEdit",
      "command": "bash /Users/rnrnstar/github/ArbitrageAssistant/.claude/hooks/quality-check-role-based.sh \"$FILE_PATH\""
    },
    {
      "event": "PostToolUse",
      "matcher": "Read|Grep|Glob|LS",
      "command": "bash /Users/rnrnstar/github/ArbitrageAssistant/.claude/hooks/task-complete-notify.sh \"$TOOL_NAME\" \"$FILE_PATH\""
    },
    {
      "event": "PostToolUse",
      "matcher": "Bash",
      "command": "bash -c 'if [ \"$ROLE\" = \"manager\" ] || [ \"$ROLE\" = \"worker\" ]; then bash /Users/rnrnstar/github/ArbitrageAssistant/.claude/hooks/task-complete-notify.sh \"Bash\" \"\"; fi'"
    },
    {
      "event": "Stop",
      "command": "bash /Users/rnrnstar/github/ArbitrageAssistant/.claude/hooks/session-complete-notify.sh"
    }
  ],
  "thinking": {
    "enabled": true,
    "defaultLevel": "deep"
  },
  "maxThinkingTokens": 32000
}