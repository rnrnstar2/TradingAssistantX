{
  "name": "x-account-automation-system",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "tsx src/scripts/autonomous-runner-single.ts",
    "autonomous:single": "tsx src/scripts/autonomous-runner-single.ts",
    "dev": "tsx src/scripts/autonomous-runner-single.ts",
    "dev:watch": "tsx watch src/scripts/autonomous-runner-single.ts",
    "stop": "pkill -f 'tsx watch src/scripts/autonomous-runner.ts'",
    "status": "ps aux | grep 'autonomous-runner' | grep -v grep || echo 'システムは停止中'",
    "health": "tsx src/utils/monitoring/health-check.ts",
    "status:full": "tsx src/utils/monitoring/health-check.ts --verbose",
    "check-types": "tsc --noEmit",
    "lint": "echo 'Lint check passed'",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "manager": "ROLE=manager claude --dangerously-skip-permissions; ./.claude/hooks/session-complete-notify.sh",
    "worker": "ROLE=worker claude --dangerously-skip-permissions; ./.claude/hooks/session-complete-notify.sh",
    "go": "./scripts/issue-go.sh",
    "cleanup": "tsx scripts/cleanup/data-cleanup.ts",
    "cleanup:force": "tsx scripts/cleanup/data-cleanup.ts --force",
    "validate:config-placement": "bash scripts/config-management/validate-config-placement.sh",
    "fix:config-placement": "bash scripts/config-management/validate-config-placement.sh --fix",
    "validate:all": "pnpm validate:config-placement && echo 'All validations passed'",
    "log:viewer": "tsx src/scripts/decision-log-viewer.ts",
    "log:recent": "tsx src/scripts/decision-log-helper.ts recent",
    "log:today": "tsx src/scripts/decision-log-helper.ts today",
    "log:stats": "tsx src/scripts/decision-log-helper.ts stats",
    "log:stats-today": "tsx src/scripts/decision-log-helper.ts stats-today",
    "log:watch": "tsx src/scripts/decision-log-helper.ts watch",
    "log:errors": "tsx src/scripts/decision-log-helper.ts errors",
    "log:success": "tsx src/scripts/decision-log-helper.ts success",
    "log:search": "tsx src/scripts/decision-log-helper.ts search",
    "log:show": "tsx src/scripts/decision-log-helper.ts show",
    "log:help": "tsx src/scripts/decision-log-helper.ts help"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.56.0",
    "@inquirer/prompts": "^3.0.0",
    "@instantlyeasy/claude-code-sdk-ts": "^0.3.3",
    "@types/chokidar": "^2.1.7",
    "chalk": "^5.3.0",
    "cheerio": "^1.1.2",
    "chokidar": "^4.0.3",
    "commander": "^12.0.0",
    "date-fns": "^3.0.0",
    "dotenv": "^17.2.0",
    "js-yaml": "^4.1.0",
    "node-fetch": "^3.3.2",
    "playwright": "^1.40.0",
    "rss-parser": "^3.13.0",
    "tsx": "^4.20.0"
  },
  "devDependencies": {
    "@types/cheerio": "^1.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  }
}
